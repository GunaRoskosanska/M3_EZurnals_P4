@model List<StudentModel>
@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Date of birth</th>
            <th>Class</th>
            <th></th>
        </tr>
        @foreach (var student in Model)
        {
         <tr>
            <td>@student.Name</td>
            <td>@student.Surname</td>
            <td>@student.BirthDate.ToShortDateString()</td>
            <td>@student.Class</td>
            <td>
                 <a asp-controller="Student" asp-action="View" asp-route-id="@student.Id">View grades</a>
            </td>
         </tr>
        }
    </table>

