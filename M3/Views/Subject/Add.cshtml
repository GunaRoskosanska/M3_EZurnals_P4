@model SubjectModel
@{
    ViewData["Title"] = "Add subject";
}

<h2>Add subject</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Subject" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Subject" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Subject">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </div>
</form>

