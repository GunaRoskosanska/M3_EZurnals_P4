@model GradeModel
@{
    ViewData["Title"] = "Add grade";
}

<h2>Add grade</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Grade" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Surname">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Subject" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Subject">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Grade" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Grade">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Description">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </div>
</form>

